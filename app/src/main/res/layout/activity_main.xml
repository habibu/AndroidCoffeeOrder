<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/activity_main"
        style="@style/Layout"
        android:background="#EFEBE9"
        android:orientation="vertical"
        android:scrollbars="vertical"
        tools:context="com.habibu.zaki.justjava.MainActivity">

        <LinearLayout
            style="@style/Layout"
            android:layout_marginTop="13dp"
            android:orientation="vertical"
            android:paddingLeft="43dp">

            <EditText
                android:id="@+id/order_name_field"
                style="@style/Layout"
                android:hint="Write your name here"
                android:inputType="textCapWords"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:text="Toppings"
                android:textAllCaps="true"
                android:textSize="19sp"/>

            <CheckBox
                android:id="@+id/whipeed_cream_checkebox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="21dp"
                android:text="Whipped cream"
                android:textSize="16sp"/>

            <CheckBox
                android:id="@+id/chocolate_checkebox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="21dp"
                android:text="Chocolate"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            style="@style/Layout"
            android:layout_marginTop="13dp"
            android:orientation="vertical"
            android:paddingLeft="43dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="27dp"
                android:layout_marginTop="11dp"
                android:text="Quantity"
                android:textAllCaps="true"
                android:textSize="19sp"/>
        </LinearLayout>

        <LinearLayout
            style="@style/Layout"
            android:orientation="horizontal"
            android:paddingLeft="43dp">


            <Button
                android:layout_width="98dp"
                android:layout_height="51dp"
                android:background="#8D6E63"
                android:onClick="decrement"
                android:text="Remove"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/quantity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="2"
                android:textColor="@android:color/black"
                android:textSize="19sp"/>


            <Button
                android:layout_width="98dp"
                android:layout_height="51dp"
                android:background="#8D6E63"
                android:onClick="increment"
                android:text="Add"
                android:textStyle="bold"/>
        </LinearLayout>

        <Button
            style="@style/Layout"
            android:layout_marginTop="160dp"
            android:background="#8D6E63"
            android:onClick="submitOrder"
            android:padding="16dp"
            android:text="Send Order"
            android:textStyle="bold"/>


    </LinearLayout>
</ScrollView>